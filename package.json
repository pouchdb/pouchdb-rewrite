{
	"name": "pouchdb-rewrite",
	"version": "0.1.0",
	"main": "index.js",
	"description": "A PouchDB plug-in that allows you to re-use your CouchDB rewrites on the client side.",
	"repository": {
		"type": "bzr",
		"url": "http://bazaar.launchpad.net/~marten-de-vries/python-pouchdb/0.x"
	},
	"dependencies": {
		"couchdb-objects": "^0.1.0",
		"pouchdb-req-http-query": "^0.1.0",
		"promise-nodify": "^1.0.0",
		"extend": "^1.2.1"
	},
	"devDependencies": {
		"es3ify": "^0.1.3"
	},
	"scripts": {
		"build-js": "mkdir -p ../../dist && browserify index.js -s Rewrite -o ../../dist/pouchdb-rewrite.js",
		"build": "npm run build-js; cd ../../dist; uglifyjs pouchdb-rewrite.js -mc > pouchdb-rewrite.min.js"
	},
	"browserify": {
		"transform": [
			"es3ify"
		]
	}
}
